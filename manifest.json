{
  "name": "GSPro",
  "description" : "Base Level Extension",
  "version": "0.1",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "*://gossluzhba.gov.ru/*",
    "*://mail.gossluzhba.gov.ru/owa/rezerv@gossluzhba.gov.ru/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://mail.gossluzhba.gov.ru/owa/rezerv@gossluzhba.gov.ru/*"],
      "run_at": "document_idle",
      "all_frames": true,
      "js": ["contentScript.js"]
    },
    {
      "matches": ["*://gossluzhba.gov.ru/*"],
      "run_at": "document_idle",
      "all_frames": true,
      "js": ["content.js"]
    }
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  }
}